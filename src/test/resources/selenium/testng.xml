<!DOCTYPE suite SYSTEM "https://testng.org/testng-1.0.dtd">
<suite name="Selenium Test Suite" parallel="classes" thread-count="2">
    
    <listeners>
        <listener class-name="io.spring.selenium.listeners.TestListener"/>
    </listeners>
    
    <test name="Article Tests - US-ARTICLE-002">
        <classes>
            <class name="io.spring.selenium.tests.SeleniumSetupTest"/>
            <class name="io.spring.selenium.tests.ArticlePositiveTests"/>
            <class name="io.spring.selenium.tests.ArticleValidationTests"/>
            <class name="io.spring.selenium.tests.ArticleErrorTests"/>
            <class name="io.spring.selenium.tests.ArticleEdgeCaseTests"/>
        </classes>
    </test>
    
</suite>
