<!DOCTYPE suite SYSTEM "https://testng.org/testng-1.0.dtd">
<suite name="Selenium Test Suite" parallel="classes" thread-count="2">
    
    <listeners>
        <listener class-name="io.spring.selenium.listeners.TestListener"/>
    </listeners>
    
    <test name="Smoke Tests">
        <groups>
            <run>
                <include name="smoke"/>
            </run>
        </groups>
        <packages>
            <package name="io.spring.selenium.tests.*"/>
        </packages>
    </test>
    
    <test name="Regression Tests">
        <groups>
            <run>
                <include name="regression"/>
            </run>
        </groups>
        <packages>
            <package name="io.spring.selenium.tests.*"/>
        </packages>
    </test>
    
    <test name="Profile Tests">
        <classes>
            <class name="io.spring.selenium.tests.ProfilePositiveTests"/>
            <class name="io.spring.selenium.tests.ProfileValidationTests"/>
            <class name="io.spring.selenium.tests.ProfileErrorTests"/>
            <class name="io.spring.selenium.tests.ProfileEdgeCaseTests"/>
        </classes>
    </test>
    
    <test name="All Tests">
        <packages>
            <package name="io.spring.selenium.tests.*"/>
        </packages>
    </test>
    
</suite>
