<!DOCTYPE suite SYSTEM "https://testng.org/testng-1.0.dtd">
<suite name="Selenium Test Suite" parallel="classes" thread-count="2">
    
    <listeners>
        <listener class-name="io.spring.selenium.listeners.TestListener"/>
    </listeners>
    
    <test name="Setup Verification">
        <classes>
            <class name="io.spring.selenium.tests.SeleniumSetupTest"/>
        </classes>
    </test>
    
    <test name="Registration Positive Tests">
        <classes>
            <class name="io.spring.selenium.tests.RegistrationPositiveTests"/>
        </classes>
    </test>
    
    <test name="Registration Validation Tests">
        <classes>
            <class name="io.spring.selenium.tests.RegistrationValidationTests"/>
        </classes>
    </test>
    
    <test name="Registration Error Tests">
        <classes>
            <class name="io.spring.selenium.tests.RegistrationErrorTests"/>
        </classes>
    </test>
    
    <test name="Registration Edge Case Tests">
        <classes>
            <class name="io.spring.selenium.tests.RegistrationEdgeCaseTests"/>
        </classes>
    </test>
    
</suite>
