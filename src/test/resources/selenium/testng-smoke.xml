<!DOCTYPE suite SYSTEM "https://testng.org/testng-1.0.dtd">
<suite name="Selenium Smoke Test" parallel="classes" thread-count="1">
    
    <listeners>
        <listener class-name="io.spring.selenium.listeners.TestListener"/>
    </listeners>
    
    <test name="Setup Verification">
        <classes>
            <class name="io.spring.selenium.tests.SeleniumSetupTest"/>
        </classes>
    </test>
    
    <test name="Delete Comment Tests">
        <classes>
            <class name="io.spring.selenium.tests.DeleteCommentPositiveTests"/>
            <class name="io.spring.selenium.tests.DeleteCommentValidationTests"/>
            <class name="io.spring.selenium.tests.DeleteCommentErrorTests"/>
            <class name="io.spring.selenium.tests.DeleteCommentEdgeCaseTests"/>
        </classes>
    </test>
    
</suite>
