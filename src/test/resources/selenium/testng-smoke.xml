<!DOCTYPE suite SYSTEM "https://testng.org/testng-1.0.dtd">
<suite name="Selenium Test Suite" parallel="false">
    
    <test name="Setup Verification">
        <classes>
            <class name="io.spring.selenium.tests.SeleniumSetupTest"/>
        </classes>
    </test>
    
    <test name="Slug Generation Positive Tests">
        <classes>
            <class name="io.spring.selenium.tests.SlugGenerationPositiveTests"/>
        </classes>
    </test>
    
    <test name="Slug Generation Validation Tests">
        <classes>
            <class name="io.spring.selenium.tests.SlugGenerationValidationTests"/>
        </classes>
    </test>
    
    <test name="Slug Generation Error Tests">
        <classes>
            <class name="io.spring.selenium.tests.SlugGenerationErrorTests"/>
        </classes>
    </test>
    
    <test name="Slug Generation Edge Case Tests">
        <classes>
            <class name="io.spring.selenium.tests.SlugGenerationEdgeCaseTests"/>
        </classes>
    </test>
    
</suite>
