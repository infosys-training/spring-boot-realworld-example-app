<!DOCTYPE suite SYSTEM "https://testng.org/testng-1.0.dtd">
<suite name="Selenium Test Suite" parallel="false">
    
    <test name="Setup Verification">
        <classes>
            <class name="io.spring.selenium.tests.SeleniumSetupTest"/>
        </classes>
    </test>
    
    <test name="User Feed Positive Tests">
        <classes>
            <class name="io.spring.selenium.tests.UserFeedPositiveTests"/>
        </classes>
    </test>
    
    <test name="User Feed Validation Tests">
        <classes>
            <class name="io.spring.selenium.tests.UserFeedValidationTests"/>
        </classes>
    </test>
    
    <test name="User Feed Error Tests">
        <classes>
            <class name="io.spring.selenium.tests.UserFeedErrorTests"/>
        </classes>
    </test>
    
    <test name="User Feed Edge Case Tests">
        <classes>
            <class name="io.spring.selenium.tests.UserFeedEdgeCaseTests"/>
        </classes>
    </test>
    
    <test name="User Feed Pagination Tests">
        <classes>
            <class name="io.spring.selenium.tests.UserFeedPaginationTests"/>
        </classes>
    </test>
    
</suite>
